<header class="border-b border-t border-white bg-zinc-950/90 text-lg my-1">
  <nav class="flex flex-wrap items-center justify-between w-full py-4 md:py-0 px-4">
    <div>
      <%= link_to root_path, class: "inline-flex items-center" do %>
        <%= render "shared/svgs/rocket" %>
        <%= render "shared/svgs/logo" %>
      <% end %>
    </div>

    <div class="hidden w-full md:flex md:items-center md:w-auto" id="menu">
      <ul class="pt-4 text-base text-gray-400 md:flex md:justify-between md:pt-0">
        <li>
          <%= link_to I18n.t("invoices.new"), new_invoice_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
        </li>
        <li>
          <%= link_to I18n.t("invoices.reports"), invoices_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
        </li>
        <li>
          <%= link_to I18n.t("nav.about"), "https://github.com/RickHPotter", class: "md:p-4 py-2 block hover:text-purple-400", target: "_blank" %>
        </li>
        <li>
          <%= link_to I18n.t("devise.shared.links.sign_out"), destroy_user_session_path, data: { turbo_method: :delete }, class: "md:p-4 py-2 block hover:text-purple-400 text-purple-500" %>
        </li>
      </ul>
    </div>
  </nav>
</header>
