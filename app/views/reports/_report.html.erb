<%= turbo_frame_tag report, class: "table-row-group" do %>
  <div class="<%= class_names("table-row", local_assigns[:report_counter]&.even? ? "bg-white" : "bg-gray-100") %>">
    <div class="table-cell px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900">
      <%= report.id %>
    </div>

    <div class="table-cell px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900">
      <%= report.total_invoices %>
    </div>

    <div class="table-cell px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900">
      <%= report.processed_invoices %>
    </div>

    <div class="table-cell px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900">
      <%= report.finished ? "FINALIZADO" : "PENDENTE" %>
    </div>

    <div class="table-cell px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium">
      <%= link_to report_path(report), class: "text-blue-600 hover:text-blue-900", data: { turbo_frame: "_top" } do %>
        <%= render "shared/svgs/eye" %>
      <% end %>
    </div>
  </div>
<% end %>
